{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": ["vite.config.ts"],
  "references": [{ "path": "./tsconfig.json" }]
}
